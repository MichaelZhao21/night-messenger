{
    "manifest_version": 2,
    "name": "Night Messenger",
    "version": "1.5",

    "description": "A simple dark theme for Facebook Messenger",

    "icons": {
        "48": "icons/night-48.png",
        "96": "icons/night-96.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*.messenger.com/*"],
            "css": ["style.css"]
        }
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "nightmessenger@michaelzhao.xyz"
        }
    }
}